{
    "image": "mcr.microsoft.com/devcontainers/ruby:3",
    "hostRequirements": {
      "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "bundle install",
    "postCreateCommand": "",
    "postAttachCommand": {
      "server": "rails server"
    },
    "portsAttributes": {
      "3000": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [3000]
  }